
- content_for :title, @model.model_name.human(count: 1)
- reorder = (params[:reorder] == 'true')
- model_name = @model.model_name.human(count: 1).downcase
- allow = policy(@record)

- unless reorder
  .table-actions
    .ui.tiny.compact.basic.buttons
      .ui.active.button
        - status = @record.published? ? (@record.has_draft? ? :pending_changes : :published) : :draft
        = translate(status, scope: %i[admin status], target: model_name)

      - action = (allow.review? && @record.published? && @record.has_draft? ? :review : :edit)
      a.ui.button href=url_for([action, :admin, @record])
        i.edit.icon
        - if !@record.published? && allow.review?
          = translate('admin.action.target.review', target: model_name)
        - elsif @record.has_draft? && allow.review?
          = translate 'admin.action.simple.review'
        - else
          = translate('admin.action.target.edit', target: model_name)

      .ui.floating.dropdown.icon.button
        i.dropdown.icon
        .menu
          - if @record.has_draft?
            a.item href=url_for([:edit, :admin, @record])
              i.edit.icon
              = translate 'admin.action.target.edit_details', target: model_name
          - if false && @record.publishable? && allow.publish?
            / TODO: Implement click to (un)publish
            .item
              i.bullhorn.icon
              = translate (@record.published? ? 'unpublish' : 'publish'), scope: %i[admin action target], target: model_name
          - if @record.published?
            a.item href=url_for(@record) target='_blank'
              i.eye.icon
              = translate 'admin.action.descriptive.show'
          - if allow.preview? && (@record.has_draft? || !@record.published?)
            a.item href=url_for([@record, preview: true]) target='_blank'
              i.eye.icon
              = translate 'admin.action.descriptive.preview'
          - if allow.destroy?
            a.item href=url_for([:admin, @record]) data={ method: 'delete', confirm: translate('admin.messages.confirm_destroy') }
              i.warning.sign.icon
              = translate 'admin.action.target.destroy', target: model_name

.details
  h3 = @record.name
  = render "admin/details/#{@record.model_name.param_key}", record: @record

  - if @record.reviewable?
    .ui.small.details.list
      = record_detail 'bullhorn', record_published_at_status if @record.respond_to? :published_at
      = record_detail 'edit', record_modified_at_status
      - if owner = @record.try(:owner)
        - written_by = translate('admin.details.written_by', author: owner.name)
        - if policy(owner).edit?
          - view_user = translate('admin.action.target.show', target: User.model_name.human)
          = record_detail 'user', written_by, view_user, url: url_for([:edit, :admin, owner])
        - else
          = record_detail 'user', written_by

.clearfix

.ui.divider

- if allow.write?
  .table-actions
    = table_action translate('admin.action.target.write', target: model_name), 'pencil alternate', url_for([:write, :admin, @record])


h4 = translate 'admin.content.outline'

= content_outline @record

.ui.hidden.divider
= table_link translate('admin.action.target.back', target: @model.model_name.human(count: -1)), 'left arrow', url_for([:admin, @model])
