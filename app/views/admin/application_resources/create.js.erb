
var creation_form = $('#new_<%= @resource.model_name.human.parameterize.underscore %>')
var html = $('<%= escape_javascript render(@resource) %>')
html.find('.ui.dropdown').dropdown()

<% if @resource.errors.present? %>
  creation_form.replaceWith(html)
<% else %>
  html.hide().appendTo('.ui.resource.items').fadeIn(300)
  creation_form.closest('.ui.accordion').accordion('close', 0)
  creation_form[0].reset()
  creation_form.find('.error.label').remove()
  creation_form.find('.error').removeClass('error')
<% end %>
