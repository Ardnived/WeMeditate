
- content_for :title, 'Music Filter - Instruments'
- reorder = (params[:reorder] == 'true')
- allow = policy(InstrumentFilter)

- if @instrument_filters.empty?
  .ui.items
    .item
      .header
        i.low.vision.icon
        ' No Instrument Filters
- elsif reorder
  = form_tag sort_admin_instrument_filters_path, method: :put
    a.ui.tiny.compact.basic.right.floated.button href=admin_instrument_filters_path
      ' Cancel
    button.ui.tiny.compact.basic.positive.right.floated.right.labeled.icon.button
      ' Save
      i.checkmark.icon

    .clearfix

    .ui.sort-list.items
      = render @instrument_filters
- else
  - if @instrument_filters.count > 1 and allow.sort?
    a.ui.tiny.compact.right.floated.basic.labeled.icon.button href=admin_instrument_filters_path(reorder: true)
      i.bars.icon
      ' Change Instruments Order

    .clearfix

  .ui.resource.items
    = render @instrument_filters

- unless reorder
  .ui.hidden.divider

  a.ui.basic.button href=admin_tracks_url
    i.left.arrow.icon
    ' Back to Tracks

  - if allow.create?
    .ui.small.header New Instrument Filter
    = render InstrumentFilter.new
