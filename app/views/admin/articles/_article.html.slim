
.item
  .actions
    .ui.tiny.compact.vertical.labeled.icon.buttons
      a.ui.button.for-viewing href=article_url(article)
        i.browser.icon
        ' View
      a.ui.button.for-viewing href=edit_admin_article_url(article)
        i.edit.icon
        ' Edit
      a.ui.button.for-viewing href=admin_article_url(article) data-method="delete"
        i.trash.icon
        ' Delete

  .content
    .header = article.title

    .meta
      .ui.list
        .item
          i.linkify.icon
          .content = article.slug
        .item
          i.hashtag.icon
          .content = article.category.name
  