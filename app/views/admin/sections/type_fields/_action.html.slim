
= f.input :format, collection: Section::ACTION_FORMATS.map {|k| [human_enum_name(section, :format, k), k]}, disabled: !allow.update_structure?, wrapper_html: { class: 'sub field-format' }

= f.input :title, wrapper_html: { class: 'sub for form' }
= f.input :subtitle, wrapper_html: { class: 'sub for form' }
= f.input :text, wrapper_html: { class: 'sub for form' }

= f.input :action, wrapper_html: { class: 'sub' }
= f.input :url, as: :url, wrapper_html: { class: 'sub for button' }

= f.fields_for :extra, f.object do |ff|
  //= ff.input :mailchimp_list_id, collection: [], selected: nil, disabled: !allow.update_structure?, wrapper_html: { class: 'sub for signup' }
  = render 'admin/sections/decoration_fields', f: ff, collection: [:leaf], for: [:button]
