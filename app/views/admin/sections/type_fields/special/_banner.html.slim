  = ff.input :banner_style, collection: [:front_page, :treatments_page].map {|c| [human_enum_name(Section, :banner_style, c), c] }, selected: f.object.extra_attr('banner_style'), label: Section.human_attribute_name(:banner_style), wrapper_html: { class: 'sub' }, required: false

