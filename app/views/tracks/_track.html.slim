- classes = []
- classes << 'active' if track_counter == 0
- classes << track.mood_filters.map {|f| dom_id(f)}
- classes << track.instrument_filters.map {|f| dom_id(f)}

article.track id=dom_id(track) class=classes
  a.info.label href=track.audio.url data = { artist: { name: track.artist.name, url: track.artist.url, image: track.artist.image.url } }
    i.play.icon
    = track.name
  a.artist href=track.artist.url target='_blank' = track.artist.name
  .duration 00:00
