var items = $('<%=j render @articles %>')

items.imagesLoaded(function() {
  Grid.container.append(items)
  Grid.container.isotope('appended', items)
  Popout.init_popouts(items)
})

<% if Article.all.count > @next_offset %>
  $('.loadmore a').prop('href', '<%= articles_path(format: 'js', offset: @next_offset) %>')
<% else %>
  $('.loadmore').remove()
<% end %>
