  .header-container
    .header-wrap.desktop.wrapper-outer
      .header-banner
        a.header-banner-logo href=root_path
          = inline_svg 'header/logo-mini.svg'
          span = translate('we_meditate').capitalize
        a.header-banner-illustration href=root_path
          = inline_svg 'header/illustration.svg'
        a.header-banner-action href='local_cities_path' = translate('header.classes_near_me').html_safe

      nav.header-bar
        a.header-bar-icon.logo href=root_path = inline_svg 'header/logo-small.svg'
        = render partial: 'layouts/partials/bar_nav_item', collection: navigation_items
        a.header-bar-icon.marker href='local_cities_path' = inline_svg 'graphics/marker.svg'

    .header-wrap.mobile.wrapper-outer
      .header-bar
        a.header-bar-icon.logo href=root_path = inline_svg 'header/logo-small.svg'
        a.header-bar-icon.burger = inline_svg 'header/burger.svg'

    #header-scrollspy.wrapper-outer
      #header-scrollspy-progress

    - unless @breadcrumbs.nil?
      nav.header-breadcrumbs
        .wrapper-outer
          - @breadcrumbs.each do |crumb|
            a.header-breadcrumbs-item href=crumb[:url] = crumb[:name]

  .header-menu
    = render partial: 'layouts/partials/menu_nav_item', collection: mobile_navigation_items
