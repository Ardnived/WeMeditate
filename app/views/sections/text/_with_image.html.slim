
- content_for :callout, flush: true do
  figure.image.callout
    a.popout.mfp-image href=section.image.url
      /img alt=section.image.identifier src=section.image.url
      = smart_image_tag section.image, '(max-width: 814px) calc(100vw - 48px), 400px'
    figcaption.image-credit #{t 'sections.credit'} â€¢ #{section.credit}

= sidetext(section, wrap: true)
.wrapper-inner
  h2.text-title = section.title
  .text-content = section.text&.sub('</p>', '</p>'+content_for(:callout)).html_safe
