
.meditations.carousel data-style='meditations'
  - meditation = @meditations.sample
  .meditation
    h3.header = section.extra_attr 'daily_meditation'
    a.video-preview href=meditation_url(meditation) style="background-image: url(#{meditation.image.url})"
      .video.button
    h4.title = meditation.name
    p = meditation.excerpt

  - meditation = @meditations.sample
  .meditation
    h3.header = section.extra_attr 'trending_meditation'
    a.video-preview href=meditation_url(meditation) style="background-image: url(#{meditation.image.url})"
      .video.button
    h4.title = meditation.name
    p = meditation.excerpt

  - meditation = @meditations.sample
  - random_meditation_attrs = section.extra_attr 'random_meditation', {}
  .meditation
    h3.header = random_meditation_attrs['header']
    a.video-preview href=meditation_url(meditation) style="background-image: url(#{meditation.image.url})"
      .video.button
    h4.title = random_meditation_attrs['title']
    p = random_meditation_attrs['text']
