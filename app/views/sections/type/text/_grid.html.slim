
- items = section.extra_attr('items', [])

//.container
  = sidetext(section)
  h2.title = section.title
  = section.text&.html_safe
  #grid.items
    .grid-sizer
    - items.each_with_index do |item, index|
      article class="#{'initial' if index < 3}"
        - if item['url'].present?
          a.title href=item['url'] = item['title']
        - else
          .title = item['title']
        p = item['text']
  - if items.length > 3
    nav.filters data-group='amount'
      a.initial.active.box.button data-filter='.initial' = t('sections.show_less')
      a.box.button data-filter='*' = t('sections.show_more')


.wrapper-outer
  = sidetext(section)

  h2.text-title = section.title
  .text-content = section.text&.html_safe

  #grid.items
    .grid-sizer
    - items.each_with_index do |item, index|
      article.grid-item class="#{'initial' if index < 3}"
        - if item['url'].present?
          a.title href=item['url'] = item['title']
        - else
          .title = item['title']
        p = item['text']

  - if items.length > 3
    nav.filter-group.outline data-group='amount'
      a.initial.active.filter-button data-filter='.initial' = t('sections.show_less')
      a.filter-button data-filter='*' = t('sections.show_more')
