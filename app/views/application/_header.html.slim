/! header
header.header.gray
  .container.desktop
    /! topline
    .header__topline
      .topline__logo
        a.logo href="#" 
          img.svg alt="we-meditate" src=image_url('header/topline__logo.svg') /
        a#burger-button.burger__button href="#" 
          span.burger__button__icon
      .topline__illustration
        .illustration__holder
          img.svg alt="meditate-illustration" src=image_url('header/topline__illustration.svg') /
        a.logo_small href="#" 
          img.svg alt="" src=image_url('header/topline__illustration_logo.svg') /
      a.topline__text href="#" 
        | Come
        span meditate
    /! /topline
    /! nav
    nav.header__nav
      ul
        = render partial: 'header_nav_item', collection: @desktop_navigation, as: :nav
    /! /nav
    /! breadcrumbs
    ul.header__breadcrumbs.transparent
      li
        a href="#" Meditation
      li
        a href="#" Why do we meditate
      li.is_active
        a href="#" Joy to life
    /! /breadcrumbs
  /! mobile
  .container.mobile
    a.logo href="#"
      img.svg alt="we-meditate" src=image_url('mobile/logo-mob-gray.svg') /
    a.text href="#"
      | Come
      br/
      | meditate
    a#burger-button.mobile-menu__btn.burger__button href="#" 
      span.burger__button__icon
    nav.mobile-menu
      .mobile-menu__topline
      ul.mobile-menu__wrap
        - @mobile_navigation.each do |nav|
          li.mobile-menu__item class="#{'active'}"
            a.mobile-menu__href href=nav[:url] nav[:title]
  /! mobile
/! /header
