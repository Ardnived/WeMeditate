
.plyr__controls
  // ===== PLAY BUTTON ===== //
  button.plyr__control aria-label=t('player.play_title', title: '{title}') data-plyr='play' type='button'
    .plyr__loading
      .icon.icon--spinner
    svg.icon--pressed role='presentation' viewBox='0 0 18 18'
      use xlink:href='#plyr-pause'
    svg.icon--not-pressed role='presentation' viewBox='0 0 18 18'
      use xlink:href='#plyr-play'
    span.label--pressed.plyr__tooltip role='tooltip' = t('player.pause')
    span.label--not-pressed.plyr__tooltip role='tooltip' = t('player.play')
    .plyr__equalizer
      - 7.times do
        span.plyr__equalizer-bar

  // ===== TIME CONTROLS ===== //
  .plyr__progress
    input aria-label=t('player.seek') data-plyr='seek' max='100' min='0' step='0.01' type='range' value='0'
    //progress.plyr__progress__buffer max='100' min='0' value='0' = t('player.%_buffered')
    span.plyr__tooltip role='tooltip' 00:00

    .plyr__time
      .plyr__time--current aria-label=t('player.current_time') 00:00
      .plyr__time--duration aria-label=t('player.duration') 00:00

  .plyr__skip
    button.plyr__control data-plyr='skip-back' type='button'
      svg role='presentation' viewBox='0 0 18 16'
        use xlink:href='#plyr-rewind'
      span.plyr__tooltip role='tooltip' = t('player.skip_back')
    button.plyr__control data-plyr='skip-forward' type='button'
      svg role='presentation' viewBox='0 0 18 16'
        use xlink:href='#plyr-fast-forward'
      span.plyr__tooltip role='tooltip' = t('player.skip_forward')

  //button.plyr__control data-plyr='restart' type='button'
    svg role='presentation'
      use xlink:href='#plyr-restart'
    span.plyr__tooltip role='tooltip' = t('player.restart')
  //button.plyr__control data-plyr="rewind" type="button"
    svg role="presentation"
      use xlink:href="#plyr-rewind"
    span.plyr__tooltip role=("tooltip"} Rewind {seektime)  secs
  //button.plyr__control data-plyr="fast-forward" type="button"
    svg role="presentation"
      use xlink:href="#plyr-fast-forward"
    span.plyr__tooltip role=("tooltip"} Forward {seektime)  secs

  // ===== VOLUME ===== //
  button.plyr__control aria-label=t('player.mute') data-plyr='mute' type='button'
    svg.icon--pressed role='presentation' viewBox='0 0 18 18'
      use xlink:href='#plyr-muted'
    svg.icon--not-pressed role='presentation' viewBox='0 0 18 18'
      use xlink:href='#plyr-volume'
    span.label--pressed.plyr__tooltip role='tooltip' = t('player.unmute')
    span.label--not-pressed.plyr__tooltip role='tooltip' = t('player.mute')

  .plyr__volume
    input aria-label=t('player.volume') autocomplete='off' data-plyr='volume' max='1' min='0' step='0.05' type='range' value='1'
