
- image_sizes = '(max-width: 767px) calc(100vw - 48px), (max-width: 1023px) 622px, 766px'

main id=dom_id(@meditation)
  h1.banner = @meditation.name

  = (@meditation.vimeo_metadata[:horizontal] || @meditation.horizontal_vimeo_id).inspect

  .meditation__media
    figure.content__video__item
      .video.video--responsive class="js-video"
        .video__inner
          .video__horizontal
            = vimeo_tag @meditation.vimeo_metadata[:horizontal] || @meditation.horizontal_vimeo_id, playsinline: false, id: "#{dom_id(@meditation)}-horizontal-video"
            /.video__thumbnail
              - if @meditation.vimeo_metadata(:horizontal).present?
                = vimeo_image_tag @meditation.vimeo_metadata(:horizontal), image_sizes
              - else
                = smart_image_tag @meditation.thumbnail, image_sizes
          .video__vertical
            = vimeo_tag @meditation.vimeo_metadata[:vertical] || @meditation.vertical_vimeo_id, playsinline: false, id: "#{dom_id(@meditation)}-vertical-video"
            /.video__thumbnail
              - if @meditation.vimeo_metadata(:vertical).present?
                = vimeo_image_tag @meditation.vimeo_metadata(:vertical), image_sizes
              - else
                = smart_image_tag @meditation.thumbnail, image_sizes
          /a.video__button

  .meditation__text
    = @meditation.description